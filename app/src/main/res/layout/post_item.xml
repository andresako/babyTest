<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/basic_dp"
        android:layout_marginLeft="@dimen/basic_dp"
        android:layout_marginRight="@dimen/basic_dp"
        android:elevation="@dimen/basic_dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:id="@+id/post_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/basic_dp"
                android:layout_marginLeft="@dimen/basic_dp"
                android:layout_marginRight="@dimen/basic_dp"
                android:textSize="@dimen/double_sp"
                android:maxLines="1"
                tools:text="Title"/>

        <TextView
                android:id="@+id/post_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/basic_sp"
                android:layout_margin="@dimen/basic_dp"
                android:textColor="@color/colorPrimary"
                android:maxLines="1"
                tools:text="Description"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>